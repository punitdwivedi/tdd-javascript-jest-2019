{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": ["error",
      { "vars": "local",
        "args": "after-used",
        "argsIgnorePattern": "_",
        "varsIgnorePattern": "_" }
    ],
    "indent": [ "error", 2, {"SwitchCase": 1} ]
  }
}
